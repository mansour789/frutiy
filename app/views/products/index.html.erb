
<h1 class="text-center ">Products</h1>

  <div class="row m-auto">
  <!-- Display all products in products.index-->
      <% @products.each do |product| %>
        <div class="col-lg-4 m-auto">
           <div class="card text-center mb-4" >
             <%= link_to (image_tag product.pictuer ,  class: 'card-img-top'), product_path(product) %>

                <div class="card-body">
                    <h3 class="card-title"> <%=product.name%> </h3>
                    <h2 class="card-title"> <%=number_to_currency product.price%> </h2>
                    <p class="card-text"> <%=product.discreption%> </p>

                    <!-- If user signed in and click Order the link will Create order-->
                    <% if user_signed_in? %>
                    <%= link_to 'Subscribe', product_path(product), class: "btn btn-success" %> 
                    
                    <%= link_to 'Order 1 time', "/products/#{product.id}/orders/create", class: "btn btn-primary" %>
                      <% else %>
                      <!-- If user NOT signed in and click Order the link Send him to Log In page-->
                    <%= link_to 'Order', new_user_session_path , class: "btn btn-primary" %>
                    <% end %>          
                </div>
           </div>
        </div>
      <% end %>
  </div>
    
     
