<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :name, 'Full Name' %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control', placeholder: "Full Name" %>
    
  </div>

  <div class="field form-group">
    <%= f.label :email, 'Email address:' %><br />
    <%= f.email_field :email, autocomplete: "email", class: 'form-control', placeholder: "myname@example.com" %>
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>

  <div class="field form-group">
    <%= f.label :password, 'Password' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :location, 'Your City' %><br />
    <%= f.text_field :location, autocomplete: "location:", class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
